.container {
  margin: 0;
  padding: 10rpx 0 0;
  width: 100%;
  height: 100%;
}

.headtext {
  font-size: 42rpx;
  font-weight: bold;
}

/* 导联 */
.ULPbox {
  width: 720rpx;

  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.ULPbox .littlePoint {
  margin: 0 20rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;

  background-color: red;
}

.ULPbox .ULPtext {
  margin-right: 20rpx;
  width: 80rpx;
}

/* 心电 */
.ECGbox {
  margin: 30rpx auto;
  width: 720rpx;
  height: 400rpx;
  border: 6rpx solid rgba(128, 128, 128, 0.397);
  border-radius: 12rpx;

  overflow: hidden;
}

#ECGbackground {
  width: inherit;
  height: inherit;

  background-color: rgb(250, 245, 240);
}

#ECGshow {
  top: -400rpx;
  width: inherit;
  height: inherit;

  background-color: rgb(250, 245, 240);
}

/* 心率 */
.RRbox {
  width: 720rpx;

  margin-top: -20rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.RRbox .RRtext {
  font-size: 36rpx;
  font-weight: bold;
}

.RRbox .RRnum {
  width: 80rpx;

  font-size: 40rpx;
  text-align: center;
}

